@page
@model RentTutorPresentation.Pages.CoursesDetailModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoursesDetail</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <div class="max-w-6xl mx-auto p-4">
        <!-- Course Details Card -->
        <div class="bg-white shadow-lg rounded-lg p-6">
            <img src="https://via.placeholder.com/600x300" alt="Course Image"
                 class="w-full h-64 object-cover rounded-t-lg">
            <div class="flex justify-between items-center mt-4">
                <h2 class="text-2xl font-bold">Introduction to Programming</h2>
                <span class="text-xl text-green-500 font-semibold">$99.99</span>
            </div>
            <div class="flex justify-between items-center mt-2">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24">
                        <path d="M12 17.27l6.18 3.73-1.64-7.19L21.82 9.5l-7.27-.61L12 2.99l-2.55 5.9-7.27.61 5.46 4.31-1.64 7.19L12 17.27z">
                        </path>
                    </svg>
                    <span class="ml-1 text-gray-600">4.5 (200 reviews)</span>
                </div>
                <span class="text-gray-600">Duration: 40 hours</span>
            </div>
            <p class="mt-4 text-gray-700">
                This course covers the basics of programming, including concepts of variables,
                loops, functions, and more. It is designed for beginners and will help you build a strong foundation in
                coding.
            </p>
            <div class="flex justify-end mt-6 space-x-4">
                <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
                    Add to Cart
                </button>
                <button class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition">
                    Add to
                    Wishlist
                </button>
            </div>
        </div>

        <!-- Instructor Section -->
        <div class="bg-white shadow-lg rounded-lg p-6 mt-8 flex items-center">
            <img src="https://via.placeholder.com/80" alt="Tutor Image" class="w-20 h-20 rounded-full">
            <div class="ml-4">
                <h3 class="text-xl font-semibold">John Doe</h3>
                <p class="text-gray-600">MSc in Computer Science</p>
                <p class="text-gray-600">Number of Courses: 15 | Rating: 4.7</p>
            </div>
            <a href="#"
               class="ml-auto text-blue-500 hover:underline transition">View Tutor Details</a>
        </div>

        <!-- Reviews Tab -->
        <div class="bg-white shadow-lg rounded-lg p-6 mt-8">
            <h4 class="text-xl font-bold">Reviews</h4>
            <div class="grid grid-cols-3 gap-4 mt-4">
                <!-- Review Item -->
                <div class="flex items-start">
                    <img src="https://via.placeholder.com/40" alt="Student Image" class="w-10 h-10 rounded-full">
                    <div class="ml-4">
                        <h5 class="font-semibold">Jane Smith</h5>
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 24 24">
                                <path d="M12 17.27l6.18 3.73-1.64-7.19L21.82 9.5l-7.27-.61L12 2.99l-2.55 5.9-7.27.61 5.46 4.31-1.64 7.19L12 17.27z">
                                </path>
                            </svg>
                            <span class="ml-1">5.0</span>
                        </div>
                        <p class="text-gray-700 mt-2">
                            This course was amazing! It really helped me understand the basics
                            of programming. The tutor explained everything clearly and was very helpful.
                        </p>
                        <span class="text-gray-500 text-sm">1 week ago</span>
                    </div>
                </div>
                <!-- More review items... -->
            </div>
            <button class="bg-gray-300 text-gray-700 mt-4 px-4 py-2 rounded-lg hover:bg-gray-400 transition">
                Show
                More
            </button>
        </div>

        <!-- Recommended Courses Section -->
        <div class="bg-white shadow-lg rounded-lg p-6 mt-8">
            <h4 class="text-xl font-bold">Recommended Courses for You</h4>
            <div class="flex space-x-4 mt-4 overflow-x-auto">
                <!-- Course Card -->
                <div class="bg-gray-100 rounded-lg p-4">
                    <img src="https://via.placeholder.com/120x80" alt="Course Image"
                         class="w-full h-32 object-cover rounded-lg">
                    <h5 class="mt-2 font-semibold">Advanced Python Programming</h5>
                    <p class="text-gray-600">Jane Doe</p>
                    <div class="flex items-center mt-2">
                        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 24 24">
                            <path d="M12 17.27l6.18 3.73-1.64-7.19L21.82 9.5l-7.27-.61L12 2.99l-2.55 5.9-7.27.61 5.46 4.31-1.64 7.19L12 17.27z">
                            </path>
                        </svg>
                        <span class="ml-1">4.8</span>
                    </div>
                    <span class="text-green-500 font-semibold mt-2">$149.99</span>
                </div>
                <!-- More course cards... -->
            </div>
            <button class="bg-gray-300 text-gray-700 mt-4 px-4 py-2 rounded-lg hover:bg-gray-400 transition"
                    onclick="scrollNext()">
                Next
            </button>
        </div>
    </div>

    <script>
        function scrollNext() {
            const container = document.querySelector('.overflow-x-auto');
            container.scrollLeft += 300;
        }
    </script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
