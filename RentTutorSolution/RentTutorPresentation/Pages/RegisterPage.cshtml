@page
@model RentTutorPresentation.Pages.RegisterPageModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="font-[sans-serif]">
        <div class="min-h-screen flex flex-col items-center justify-center py-6 px-4">
            <div class="grid md:grid-cols-2 items-center gap-4 max-w-6xl w-full">
                <div class="border border-gray-300 rounded-lg p-6 max-w-md shadow-[0_2px_22px_-4px_rgba(93,96,127,0.2)] max-md:mx-auto">
                    <div class="mb-8">
                        <h3 class="text-gray-800 text-3xl font-extrabold">Register</h3>
                        <p class="text-gray-500 text-sm mt-4 leading-relaxed">
                            Create your account and explore a world of possibilities. Your journey begins here.
                        </p>
                    </div>
                    <div class="flex justify-center mb-6">
                        <button id="studentTabBtn" class="bg-blue-500 text-white py-2 px-4 rounded-l" onclick="showTab('student')">Student Registration</button>
                        <button id="tutorTabBtn" class="bg-gray-200 text-gray-800 py-2 px-4 rounded-r" onclick="showTab('tutor')">Become Tutor</button>
                    </div>
                    <div id="studentTab" class="tab-content">
                        <form class="space-y-4" method="post">
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Full Name</label>
                                <input @* asp-for="User.FullName" *@ type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your full name" />
                            </div>
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Email</label>
                                <input @* asp-for="User.Email" *@ type="email" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your email" />
                            </div>
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Password</label>
                                <input @* asp-for="User.PasswordHash" *@ type="password" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your password" />
                            </div>
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Confirm Password</label>
                                <input @* asp-for="User.ConfirmPasswordHash" *@ type="password" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Confirm your password" />
                            </div>
                            <div class="mt-8">
                                <button type="submit" class="w-full shadow-xl py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                                    Register
                                </button>
                            </div>
                        </form>
                    </div>
                    <div id="tutorTab" class="tab-content hidden">
                        <form class="space-y-4" method="post">
                            <div class="flex space-x-4">
                                <div class="w-1/2">
                                    <label class="text-gray-800 text-sm mb-2 block">Full Name</label>
                                    <input type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your full name" />
                                </div>

                                <div class="w-1/2">
                                    <label class="text-gray-800 text-sm mb-2 block">Nick Name</label>
                                    <input type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your username" />
                                </div>
                            </div>

                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Email</label>
                                <input type="email" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your email" />
                            </div>
                            <div class="flex space-x-4">
                                <div class="w-1/2">
                                    <label class="text-gray-800 text-sm mb-2 block">Password</label>
                                    <input type="password" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your password" />
                                </div>

                                <div class="w-1/2">
                                    <label class="text-gray-800 text-sm mb-2 block">Confirm Password</label>
                                    <input type="password" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Confirm your password" />
                                </div>
                            </div>

                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Address</label>
                                <input type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your address" />
                            </div>
                            <div>

                                <div class="flex space-x-4">
                                    <div class="w-1/2">
                                        <label class="text-gray-800 text-sm mb-2 block">Phone</label>
                                        <input type="tel" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your phone number" />
                                    </div>

                                    <div class="w-1/2">
                                        <label class="text-gray-800 text-sm mb-2 block">Birthday</label>
                                        <input type="date" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" />
                                    </div>
                                </div>

                            </div>
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Qualifications</label>
                                <input type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your qualifications" />
                            </div>
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Experience</label>
                                <input type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your experience" />
                            </div>
                            <div>
                                <label class="text-gray-800 text-sm mb-2 block">Specialization</label>
                                <input type="text" required class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" placeholder="Enter your specialization" />
                            </div>
                            <div class="mt-8">
                                <button type="submit" class="w-full shadow-xl py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                                    Become a Tutor
                                </button>
                            </div>
                        </form>
                    </div>
                    <p class="text-sm mt-8 text-center text-gray-800">
                        Already have an account?
                        <a href="/LoginPage" class="text-blue-600 font-semibold hover:underline ml-1 whitespace-nowrap">Sign in here</a>
                    </p>
                </div>
                <div class="lg:h-[400px] md:h-[300px] max-md:mt-8">
                    <img src="/img/RegisterImg.jpg" class="w-full h-full max-md:w-4/5 mx-auto block object-cover" alt="Register Image" />
                </div>
            </div>
        </div>
    </div>

    <script>
        function showTab(tab) {
            const studentTabBtn = document.getElementById('studentTabBtn');
            const tutorTabBtn = document.getElementById('tutorTabBtn');
            const studentTab = document.getElementById('studentTab');
            const tutorTab = document.getElementById('tutorTab');

            if (tab === 'student') {
                studentTab.classList.remove('hidden');
                tutorTab.classList.add('hidden');
                studentTabBtn.classList.add('bg-blue-500', 'text-white');
                studentTabBtn.classList.remove('bg-gray-200', 'text-gray-800');
                tutorTabBtn.classList.add('bg-gray-200', 'text-gray-800');
                tutorTabBtn.classList.remove('bg-blue-500', 'text-white');
            } else {
                tutorTab.classList.remove('hidden');
                studentTab.classList.add('hidden');
                tutorTabBtn.classList.add('bg-blue-500', 'text-white');
                tutorTabBtn.classList.remove('bg-gray-200', 'text-gray-800');
                studentTabBtn.classList.add('bg-gray-200', 'text-gray-800');
                studentTabBtn.classList.remove('bg-blue-500', 'text-white');
            }
        }
    </script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
