            @section Scripts {
                <script>
                    function showStudentDetails(id) {
                        fetch(`/Admin/StudentManager?handler=StudentDetails&id=${id}`)
                            .then(response => response.json())
                            .then(data => {
                                document.getElementById("student-image").src = data.imageUrl;
                                document.getElementById("student-fullname").textContent = data.fullName;
                                document.getElementById("student-phone").textContent = data.phone;
                                document.getElementById("student-email").textContent = data.email;
                                document.getElementById("student-address").textContent = data.address;
                                document.getElementById("student-birthday").textContent = new Date(data.birthday).toLocaleDateString();
                                document.getElementById("student-status").textContent = data.Status ? "Active" : "Deactive";
                                document.getElementById("student-createdat").textContent = new Date(data.createdAt).toLocaleDateString();
                                document.getElementById("student-updatedat").textContent = new Date(data.updatedAt).toLocaleDateString();
                                document.getElementById("popup-modal").classList.remove("hidden");
                            })
                            .catch(error => console.error('Error fetching student details:', error));
                    }

                    function closePopup() {
                        document.getElementById("popup-modal").classList.add("hidden");
                    }
                </script> *@
