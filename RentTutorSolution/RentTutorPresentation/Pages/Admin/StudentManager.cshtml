                                    <th class="px-4 py-3">@Html.DisplayNameFor(model => model.Student.Items[0].Status)</th>
                                    <th class="px-4 py-3">@Html.DisplayNameFor(model => model.Student.Items[0].Birthday)</th>
                                    <th class="px-4 py-3">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                @{
                                    if (Model.Student?.Items == null)
                                    {
                                        <p>No students available.</p>
                                    }
