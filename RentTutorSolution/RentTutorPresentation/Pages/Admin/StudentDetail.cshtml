                            <div class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
                                <div class="flex flex-col items-center mb-4">
                                    <img src="/img/Avatar04.jpg" alt="Student Image" class="w-20 h-20 rounded-full mb-4">
                                    <div class="text-center">
                                        <h2 id="username" class="text-xl font-semibold">@Html.DisplayFor(model => model.Student.Username)</h2>
                                        <p id="email" class="text-gray-600">@Html.DisplayFor(model => model.Student.Email)</p>
                                    </div>
                                </div>

                                <div class="flex space-x-4">
                                    <input type="hidden" asp-for="Student.UserId" />
                                    <input type="hidden" asp-for="Student.Username" />
                                    <input type="hidden" asp-for="Student.Email" />
                                    <input type="hidden" asp-for="Student.PasswordHash" />

                                    <div class="w-1/2">
                                        <label asp-for="Student.FullName" class="block text-gray-700 font-medium mb-2">Full Name</label>
                                        <input asp-for="Student.FullName" type="text" id="fullName" class="w-full px-4 py-2 border rounded-lg" readonly>
                                    </div>

                                    <div class="w-1/2">
                                        <label asp-for="Student.Role" class="block text-gray-700 font-medium mb-2">Role</label>
                                        <input asp-for="Student.Role" type="text" id="role" class="w-full px-4 py-2 border rounded-lg" readonly>
                                    </div>
                                </div>

                                <div class="flex space-x-4">
                                    <div class="w-1/2">
                                        <label asp-for="Student.Phone" class="block text-gray-700 font-medium mb-2">Phone</label>
                                        <input asp-for="Student.Phone" type="text" id="phone" class="w-full px-4 py-2 border rounded-lg" readonly>
                                    </div>

                                    <div class="w-1/2">
                                        <label asp-for="Student.Birthday" class="block text-gray-700 font-medium mb-2">Birthday</label>
                                        <input asp-for="Student.Birthday" type="text" id="birthday" class="w-full px-4 py-2 border rounded-lg" readonly>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="Student.Address" class="block text-gray-700 font-medium mb-2">Address</label>
                                    <input asp-for="Student.Address" type="text" id="address" class="w-full px-4 py-2 border rounded-lg" readonly>
                                </div>

                                <div class="flex space-x-4">
                                    <div class="w-1/2">
                                        <label asp-for="Student.CreatedAt" class="block text-gray-700 font-medium mb-2">Created At</label>
                                        <input asp-for="Student.CreatedAt" type="text" id="createdAt" class="w-full px-4 py-2 border rounded-lg" readonly>
                                    </div>

                                    <div class="w-1/2">
                                        <label asp-for="Student.UpdatedAt" class="block text-gray-700 font-medium mb-2">Updated At</label>
                                        <input asp-for="Student.UpdatedAt" type="text" id="updatedAt" class="w-full px-4 py-2 border rounded-lg" readonly>
                                    </div>
                                </div>
                        </form>
                        <div class="mb-4">
                            <label asp-for="Student.Status" class="block text-gray-700 font-medium mb-2">Status</label>
                            <select asp-for="Student.Status" class="w-full px-4 py-2 border rounded-lg">
                                <option value="Active" class="text-green-600">Active</option>
                                <option value="Disactive" class="text-red-600">Disactive</option>
                            </select>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>

                <script>
                    function goBack() {
                        window.history.back();
                    }

                    function showStudentDetails(userId) {
                        // Fetch and display student details using the userId

