                                        <label asp-for="User.Username" class="block text-gray-700 font-medium mb-2">Full Name</label>
                                        <input asp-for="User.Username" type="text" class="w-full px-4 py-2 border rounded-lg" readonly>
                                </div>

                                <div class="w-1/2">
                                        <label asp-for="User.Role" class="block text-gray-700 font-medium mb-2">Role</label>
                                        <input asp-for="User.Role" type="text" class="w-full px-4 py-2 border rounded-lg" readonly>
                                </div>
                            </div>

                        <div class="flex space-x-4">
                            <div class="w-1/2">
                                        <label asp-for="User.Phone" class="block text-gray-700 font-medium mb-2">Phone</label>
                                        <input asp-for="User.Phone" class="w-full px-4 py-2 border rounded-lg" readonly>
                            </div>

                            <div class="w-1/2">
                                        <label asp-for="User.Birthday" class="block text-gray-700 font-medium mb-2">Birthday</label>
