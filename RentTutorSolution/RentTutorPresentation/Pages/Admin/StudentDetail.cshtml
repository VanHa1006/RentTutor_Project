                            </div>
                        </div>
                        <div class="mb-4">
                                    <label asp-for="User.Address" class="block text-gray-700 font-medium mb-2">Address</label>
                                    <input asp-for="User.Address" type="text" class="w-full px-4 py-2 border rounded-lg" readonly>
                        </div>

                        <div class="flex space-x-4">
                            <div class="w-1/2">
                                        <label asp-for="User.CreatedAt" class="block text-gray-700 font-medium mb-2">Created At</label>
                                        <input asp-for="User.CreatedAt" type="text" id="createdAt" class="w-full px-4 py-2 border rounded-lg" readonly>
                            </div>

                            <div class="w-1/2">
                                        <label asp-for="User.UpdatedAt" class="block text-gray-700 font-medium mb-2">Updated At</label>
                                        <input asp-for="User.UpdatedAt" type="text" id="updatedAt" class="w-full px-4 py-2 border rounded-lg" readonly>
                            </div>
                        </div>

                        <div class="mb-4">
                                    <label asp-for="User.Status"  class="block text-gray-700 font-medium mb-2">Status</label>
                                    <select asp-for="User.Status" class="w-full px-4 py-2 border rounded-lg">
