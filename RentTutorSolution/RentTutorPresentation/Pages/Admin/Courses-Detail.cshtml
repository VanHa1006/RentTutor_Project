            @* ------------------------------------Main------------------------------------ *@
            <div class="main-content flex flex-col flex-grow p-4 justify-center items-center min-h-screen">
                <h1 class="font-bold text-2xl text-gray-700 mb-4">Course Detail</h1>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Course.CourseId" />
                <div class="bg-white shadow rounded-lg p-6" style="max-width: 800px;">
                    <!-- Image and Video Link -->
                    <div class="flex justify-center items-center">
                        <div class="relative" style="width: 500px;">
                                <img id="courseImage" src="@Model.Course.Image" class="h-auto w-full object-cover rounded-lg">
                                <input asp-for="Course.Image" readonly class="text-gray-900" />
                            <svg class="absolute inset-0 m-auto h-10 w-10 text-white cursor-pointer" fill="currentColor" viewBox="0 0 20 20" onclick="showVideo()">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-1-11.414V13.414L13 10 9 6.586z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                    </div>

                    <!-- Course Name -->
                    <div class="mt-4">
                            <label asp-for="Course.CourseName" class="block font-semibold text-gray-700">Course Name:</label>
                            <input asp-for="Course.CourseName" readonly class="text-gray-900" />
                            <span asp-validation-for="Course.CourseName" class="text-danger"></span>
                        <div>
                                <label asp-for="Course.LinkVideo" class="block font-semibold text-gray-700">Video Link:</label>
                                <input type="hidden" asp-for="Course.LinkVideo" />
                                <a id="videoLink" class="text-blue-500 hover:underline" src="@Model.Course.LinkVideo" target="_blank">@Model.Course.LinkVideo</a>
                        </div>
                    </div>

                    <!-- CategoryID and TutorID -->
                    <div class="flex mt-4 space-x-4">
                        <div class="w-1/2">
                            <label asp-for="Course.Category" class="block font-semibold text-gray-700">
                                Category ID:
                                    <input asp-for="Course.CategoryId" type="hidden"></input>
                                    <p class="text-gray-900">@Model.Course.Category.CategoryName</p>
                            </label>
                                <span asp-validation-for="Course.CategoryId" class="text-danger" ></span>
                        </div>
                        <div class="w-1/2">
                            <label asp-for="Course.TutorId" class="block font-semibold text-gray-700">Tutor ID:
                                    <input asp-for="Course.TutorId" type="hidden"/>
                                    <p class="text-gray-900">@Model.Course.Tutor.TutorNavigation.FullName</p>
                                    <span asp-validation-for="Course.TutorId" class="text-danger"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mt-4">
                            <label asp-for="Course.Description" class="block font-semibold text-gray-700">Description:
                                <input asp-for="Course.Description" class="text-gray-900" readonly />
                            </label>
                            <span asp-validation-for="Course.Description" class="text-danger"></span>
                    </div>

                    <!-- Price, DiscountPrice, Hours -->
                    <div class="flex mt-4 space-x-4">
                        <div class="w-1/3">
                            <label asp-for="Course.Price" class="block font-semibold text-gray-700">Price:
                                    <input asp-for="Course.Price" class="text-gray-900" readonly/>
                            </label>
                                
                                <span asp-validation-for="Course.Price" class="text-danger"></span>
                        </div>
                        <div class="w-1/3">
                                <label asp-for="Course.DiscountPrice" class="block font-semibold text-gray-700">
                                    Discount Price:
                                    <input asp-for="Course.DiscountPrice" readonly class="text-gray-900" />
                            </label>
                                
                                <span asp-validation-for="Course.DiscountPrice" class="text-danger"></span>
                        </div>
                        <div class="w-1/3">
                            <label asp-for="Course.Hours" class="block font-semibold text-gray-700">Hours:
                                    <input asp-for="Course.Hours" class="text-gray-900" readonly/>
                            </label>
                                
                                <span asp-validation-for="Course.Hours" class="text-danger"></span>
                            
                        </div>
                    </div>

                    <!-- Status, CreatedAt, UpdatedAt -->
                    <div class="flex mt-4 space-x-4 items-center">
                        <div class="w-1/3">
                                <label asp-for="Course.Status" class="block font-semibold text-gray-700">Status</label>
                                <select asp-for="Course.Status" class="ml-2 px-2 py-1 font-semibold leading-tight rounded-full" onchange="updateStatusColor()">
                                    <option value="Active" class="text-green-700 bg-green-100 dark:bg-green-700 dark:text-green-100">Active</option>
                                    <option value="Disactive" class="text-red-700 bg-red-100 dark:bg-red-700 dark:text-red-100">Disactive</option>
                                </select>
                        </div>
                        <div class="w-1/3">
                            <label asp-for="Course.CreatedAt" class="block font-semibold text-gray-700">Created At:</label>
                                <input asp-for="Course.CreatedAt" class="text-gray-900" readonly />
                                <span asp-validation-for="Course.CreatedAt" class="text-danger"></span>
                        </div>
                        <div class="w-1/3">
                            <label asp-for="Course.UpdatedAt" class="block font-semibold text-gray-700">Updated At:</label>
                                <input asp-for="Course.UpdatedAt" class="text-gray-900" readonly />
                                <span asp-validation-for="Course.UpdatedAt" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="flex justify-between mt-6">
                        <button id="backBtn" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Back</button>
                        <button type="submit" id="updateBtn" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Update</button>
                    </div>
                </div>
                </form>
            </div>


            <!-- Video Popup -->
            <div id="videoPopup" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <iframe id="videoFrame" width="560" height="315" src="@Model.Course.LinkVideo" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    <button onclick="closeVideo()" class="mt-4 bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Close</button>
                </div>
            </div>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var statusElement = document.getElementById("status");

                    // Initialize status color
                    updateStatusColor(statusElement.value);

                    statusElement.addEventListener("change", function () {
                        updateStatusColor(statusElement.value);
                    });

                    function updateStatusColor(status) {
                        if (status === "Active") {
                            statusElement.className = "ml-2 px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100";
                        } else {
                            statusElement.className = "ml-2 px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full dark:bg-red-700 dark:text-red-100";
                        }
                    }

                    document.getElementById("backBtn").addEventListener("click", function () {
                        window.location.href = "/Admin/CourseManage";
                    });

                    document.getElementById("updateBtn").addEventListener("click", function () {
                        // Simulate update logic here
                        var success = true; 

                        if (success) {
                            showToast("Update successfully", "success");
                        } else {
                            showToast("Update failure", "error");
                        }
                    });

                    function showToast(message, type) {
                        const toast = document.createElement("div");
                        toast.className = "fixed bottom-4 right-4 p-4 rounded-lg shadow-lg text-white";
                        toast.style.backgroundColor = type === "success" ? "#38a169" : "#e53e3e"; // Green for success, red for error
                        toast.innerText = message;

                        document.body.appendChild(toast);

                        setTimeout(() => {
                            toast.remove();
                        }, 3000);
                    }

                    window.showVideo = function () {
                        var videoPopup = document.getElementById("videoPopup");
                        var videoFrame = document.getElementById("videoFrame");
                        var videoLink = document.getElementById("videoLink").href;

                        videoFrame.src = videoLink;
                        videoPopup.classList.remove("hidden");
                    }

                    window.closeVideo = function () {
                        var videoPopup = document.getElementById("videoPopup");
                        var videoFrame = document.getElementById("videoFrame");

                        videoFrame.src = "";
                        videoPopup.classList.add("hidden");
                    }
                });
            </script>

            <footer class="footer px-4 py-6">
