                <script>

                    function updateStatusColor() {
                        const select = document.getElementById('status');
                        const selectedOption = select.options[select.selectedIndex];

                        // Remove existing status classes
                        select.classList.remove('status-active', 'status-disactive');

                        // Add new status class based on selected option
                        if (selectedOption.value === 'Active') {
                            select.classList.add('status-active');
                        } else if (selectedOption.value === 'Disactive') {
                            select.classList.add('status-disactive');
                        }
                    }

                    // Initial call to set the correct color on page load
                    document.addEventListener('DOMContentLoaded', updateStatusColor);

