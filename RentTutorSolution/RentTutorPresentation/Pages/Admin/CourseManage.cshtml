                <div id="successAlert" class="fixed bottom-4 right-4 bg-green-500 text-white p-4 rounded-lg shadow-lg hidden">
                    Delete Successfully
                </div>

                <script>
                    function showDetailPopup(courseName) {
                        // Set the popup data based on the course name or other data
                        document.getElementById('courseName').innerText = courseName;
                        // More code to set other details

                        document.getElementById('detailPopup').classList.remove('hidden');
                    }

                   
                    function hideDetailPopup() {
                        document.getElementById('detailPopup').classList.add('hidden');
                    }

                    document.getElementById('courseStatus').addEventListener('change', function () {
                        const status = this.value;
                        const courseStatus = document.getElementById('courseStatus');

                        courseStatus.classList.remove('bg-green-100', 'text-green-700', 'bg-red-100', 'text-red-700');

                        if (status === 'Running') {
                            courseStatus.classList.add('bg-green-100', 'text-green-700');
                        } else if (status === 'Stop operating') {
                            courseStatus.classList.add('bg-red-100', 'text-red-700');
                        }
                    });



                    document.getElementById('checkAllButton').addEventListener('click', function () {
                        document.querySelectorAll('.form-checkbox').forEach(checkbox => {
                            checkbox.checked = true;
                        });
                    });

                document.getElementById('deleteButton').addEventListener('click', function () {
                    let checkedCards = Array.from(document.querySelectorAll('.form-checkbox')).filter(checkbox => checkbox.checked);
                    if (checkedCards.length > 0) {
                        if (confirm('Are you sure you want to delete this Course or not?')) {
                            checkedCards.forEach(checkbox => {
                                checkbox.closest('.block').remove();
                            });
                            document.getElementById('successAlert').classList.remove('hidden');
                            setTimeout(() => {
                                document.getElementById('successAlert').classList.add('hidden');
                            }, 3000);
                        }
                    } else {
                        alert('No cards selected.');
                    }
                });
                </script>



            </div>


