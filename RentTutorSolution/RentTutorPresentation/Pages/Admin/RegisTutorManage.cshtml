            </header>


            <div class="main-content flex flex-col flex-grow p-4">
                <h1 class="font-bold text-2xl text-gray-700">Register Tutor</h1>
                <div id="alert-container" class="fixed bottom-0 right-0 m-4 hidden bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <strong class="font-bold">Success!</strong>
                    <span class="block sm:inline"> Tutor Accept Successful.</span>
                    <span class="absolute top-0 bottom-0 right-0 px-4 py-3 cursor-pointer" onclick="closeAlert()">
                        <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 5.652a1 1 0 0 0-1.414 0L10 8.586 7.066 5.652a1 1 0 1 0-1.414 1.414L8.586 10l-2.934 2.934a1 1 0 1 0 1.414 1.414L10 11.414l2.934 2.934a1 1 0 0 0 1.414-1.414L11.414 10l2.934-2.934a1 1 0 0 0 0-1.414z" /></svg>
                    </span>
                </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-4">
                        <!-- Tutor Request Card 1 -->
                    @foreach (var item in Model.Tutor.Items)
                    {
                        <div class="border-2 border-gray-300 p-3 rounded-lg flex flex-col space-y-2 bg-white">
                        
                            <img src="/img/Avatar07.jpg" alt="Tutor Image" class="w-24 h-24 object-cover rounded-full mx-auto">
                            <p class="text-sm"><strong>Full Name:</strong>@Html.DisplayFor(modelItem => item.TutorNavigation.FullName)</p>
                            <p class="text-sm"><strong>Username:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Username)</p>
                            <p class="text-sm"><strong>Email:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Email)</p>
                            <p class="text-sm"><strong>Phone:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Phone)</p>
                            <p class="text-sm"><strong>Address:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Address)</p>
                            <p class="text-sm"><strong>Birthday:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Birthday)</p>
                            <p class="text-sm"><strong>Qualifications:</strong>@Html.DisplayFor(modelItem => item.Qualifications)</p>
                            <p class="text-sm"><strong>Experience:</strong> @Html.DisplayFor(modelItem => item.Experience)</p>
                            <p class="text-sm"><strong>Specialization:</strong> @Html.DisplayFor(modelItem => item.Specialization)</p>
                            <div class="flex items-center justify-between">
                                <button class="bg-green-500 text-white py-1 px-3 rounded text-sm" onclick="acceptTutor()">Accept</button>
                                <button class="bg-red-500 text-white py-1 px-3 rounded text-sm" onclick="showDeclineForm(1)">Decline</button>
                            </div>
                      
                            <div id="decline-form-1" class="hidden flex flex-col space-y-2 mt-2">
                                <label class="text-sm"><strong>Decision:</strong></label>
                                <input type="text" class="border border-gray-300 rounded p-1 text-sm" placeholder="Enter decision">
                                <label class="text-sm"><strong>Reason:</strong></label>
                                <textarea class="border border-gray-300 rounded p-1 text-sm" placeholder="Enter reason"></textarea>
                                <div class="flex space-x-2">
                                <button class="bg-blue-500 text-white py-1 px-3 rounded text-sm">Send</button>
                                <button class="bg-gray-500 text-white py-1 px-3 rounded text-sm" onclick="hideDeclineForm(4)">Cancel</button>
                                </div>
                            </div>
                        </div>
                    }
           
            </div>
            

          
            <script>
                function acceptTutor() {
                    const alertContainer = document.getElementById('alert-container');
                    alertContainer.classList.remove('hidden');
                    alertContainer.classList.add('flex');

                    setTimeout(() => {
                        alertContainer.classList.remove('flex');
                        alertContainer.classList.add('hidden');
                    }, 1500);
                }

                function closeAlert() {
                    const alertContainer = document.getElementById('alert-container');
                    alertContainer.classList.remove('flex');
                    alertContainer.classList.add('hidden');
                }

                function showDeclineForm(id) {
                    document.getElementById(`decline-form-${id}`).classList.remove('hidden');
                }

                function hideDeclineForm(id) {
                    document.getElementById(`decline-form-${id}`).classList.add('hidden');
                }
            </script>


  
