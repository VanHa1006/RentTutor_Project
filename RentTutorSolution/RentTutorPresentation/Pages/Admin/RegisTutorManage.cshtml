                            <p class="text-xs"><strong>Username:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Username)</p>
                            <p class="text-xs"><strong>Email:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Email)</p>
                            <p class="text-xs"><strong>Phone:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Phone)</p>
                            <p class="text-xs"><strong>Address:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Address)</p>
                            <p class="text-xs"><strong>Birthday:</strong> @Html.DisplayFor(modelItem => item.TutorNavigation.Birthday)</p>
                            <p class="text-xs"><strong>Experience:</strong> @Html.DisplayFor(modelItem => item.Experience)</p>
                            <p class="text-xs"><strong>Specialization:</strong> @Html.DisplayFor(modelItem => item.Specialization)</p>
                            <div class="text-xs flex items-center space-x-2">
                                <strong>Qualifications:</strong>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="#bbb" stroke="#bbb" width="18" height="18" onclick="showCertificatePopup()" class="cursor-pointer" viewBox="0 0 128 128">
                                    <path d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z" fill="#bbb" stroke="#bbb"></path>
                                </svg>
                                <img id="certificate-image" src="@Html.DisplayFor(modelItem => item.Qualifications)" class="hidden w-24 h-24 object-cover rounded-md" alt="Certificate">
                            </div>


                            <div class="flex items-center justify-between">
                                <!-- Accept Button -->
                                <form method="post" asp-page-handler="Accept">
                                    <input type="hidden" name="TutorId" value="@item.TutorNavigation.UserId" />
                                    <button class="bg-green-500 text-white py-1 px-2 rounded text-xs" type="submit">Accept</button>
                                </form>

                                <!-- Decline Button & Form -->
                                <button class="bg-red-500 text-white py-1 px-2 rounded text-xs" onclick="showDeclineForm(@item.TutorNavigation.UserId)">Decline</button>
                            </div>

                            <div id="decline-form-@item.TutorNavigation.UserId" class="hidden flex flex-col space-y-1 mt-2">
                                <form method="post" asp-page-handler="Decline">
                                    <div>
                                        <input type="hidden" name="TutorId" value="@item.TutorNavigation.UserId" />
                                        <label class="text-xs"><strong>Decision:</strong></label>
                                        <input type="text" name="Decision" class="border border-gray-300 rounded p-1 text-xs" placeholder="Enter decision">
                                    </div>
                                    <div>
                                        <label class="text-xs"><strong>Reason:</strong></label>
                                        <textarea name="Reason" class="border border-gray-300 rounded p-1 text-xs" placeholder="Enter reason"></textarea>
                                    </div>
                                    <div class="flex space-x-2">
                                        <button class="bg-blue-500 text-white py-1 px-2 rounded text-xs" type="submit">Send</button>
                                        <button class="bg-gray-500 text-white py-1 px-2 rounded text-xs" onclick="hideDeclineForm(@item.TutorNavigation.UserId)">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </div>


