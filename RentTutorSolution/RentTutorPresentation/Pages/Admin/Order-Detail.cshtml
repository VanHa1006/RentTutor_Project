        <main class="main flex flex-col flex-grow -ml-64 md:ml-0 transition-all duration-150 ease-in">
            <header class="header bg-white shadow py-4 px-4">
                <div class="header-content flex items-center flex-row">
                    <form action="#">
                        <div class="hidden md:flex relative">
                            <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                                <svg class="h-6 w-6"
                                     fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round"
                                     stroke-width="2"
                                     viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>

                            <input id="search"
                                   type="text"
                                   name="search"
                                   class="text-sm sm:text-base placeholder-gray-500 pl-10 pr-4 rounded-lg border border-gray-300 w-full h-10 focus:outline-none focus:border-indigo-400"
                                   placeholder="Search..." />
                        </div>
                        <div class="flex md:hidden">
                            <a href="#" class="flex items-center justify-center h-10 w-10 border-transparent">
                                <svg class="h-6 w-6 text-gray-500"
                                     fill="none"
                                     stroke-linecap="round"
                                     stroke-linejoin="round"
                                     stroke-width="2"
                                     viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </a>
                        </div>
                    </form>
                    <div class="flex ml-auto">
                        <a href class="flex flex-row items-center">
                            <img src="https://avatars.githubusercontent.com/u/16786985?v=4"
                                 alt
                                 class="h-10 w-10 bg-gray-200 border rounded-full" />
                            <span class="flex flex-col ml-2">
                                <span class="truncate w-20 font-semibold tracking-wide leading-none">Admin</span>
                                <span class="truncate w-20 text-gray-500 text-xs leading-none mt-1">Manager</span>
                            </span>
                        </a>
                    </div>
                </div>
            </header>

            @* ----------------------------- Main -------------------------- *@
            <div class="main-content flex flex-col flex-grow p-4">
                <h1 class="font-bold text-2xl text-gray-700">Orders Detail</h1>

                <!-- Toast Message -->
                <div id="toastMessage" class="hidden mt-4 p-4 bg-red-500 text-white rounded-lg">
                    Update failure
                </div>
                <div class="flex items-center justify-center min-h-screen bg-gray-100 p-6">
                    <div class="bg-white p-8 rounded-lg shadow-lg w-4/5 max-w-xl">
                        <!-- Logo -->
                        <div class="flex justify-center mb-8">
                            <img src="/img/graduation.png" alt="Graduation Logo" class="h-28 w-28">
                        </div>

                        <!-- Invoice Information -->
                        <div class="space-y-4">
                            <!-- Invoice Header -->
                            <div class="flex justify-between items-center mb-6">
                                <div>
                                    <h2 class="text-xl font-bold text-gray-700">Invoice</h2>
                                    <p class="text-sm text-gray-500">Order Date: @Model.Order.OrderDate</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm text-gray-500">Invoice #: @Model.Order.OrderId</p>
                                    <p class="text-sm text-gray-500">StudentID: @Model.Order.StudentId</p>
                                </div>
                            </div>

                            @foreach (var detail in Model.OrderDetails)
                            {
                            <!-- Order Details -->
                            <table class="w-full text-left text-gray-500 mb-6">
                                    <thead>
                                        <tr>
                                            <th class="py-2">Course Name:</th>
                                            <th class="py-2 text-right">@detail.Course.CourseName</th>
                                        </tr>
                                    </thead>
                                <tbody>
                                        <tr>
                                            <td class="py-2">Description</td>
                                            <td class="py-2 text-right">@detail.Course.Description</td>
                                        </tr>
                                    <tr>
                                        <td class="py-2">Original Price</td>
                                            <td class="py-2 text-right">@detail.UnitPrice</td>
                                    </tr>

                                    <tr>
                                        <td class="py-2">Savings</td>
                                            <td class="py-2 text-right">@detail.Course.DiscountPrice</td>
                                    </tr>
                                    <tr class="font-bold">
                                        <td class="py-2">Total Amount</td>
                                            <td class="py-2 text-right">@detail.TotalPrice</td>
                                    </tr>
                                </tbody>
                            </table>
                            }
                            <!-- Status -->
                            <div class="mb-6">
                                <p class="text-sm font-medium text-gray-700">Status:</p>
                                <div class="mt-1 inline-flex items-center px-2 py-1 font-semibold leading-tight text-sm rounded-full
                                    bg-green-100 text-green-700 dark:bg-green-700 dark:text-green-100">
                                    @Model.Order.Status
                                </div>
                            </div>
                            
                            <!-- Closing Note -->
                            <div class="border-t border-gray-200 pt-6">
                                <p class="text-center text-gray-500">
                                    Thank you for your business!<br>
                                    Please remit payment within 30 days.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <script>
                // Form Submission
                document.getElementById('updateOrderForm').addEventListener('submit', function (event) {
                    event.preventDefault();

                    // Simulate success or failure (replace with actual logic)
                    const success = true;

                    if (success) {
                        // Redirect to Orders management
                        window.location.href = '/Admin/OrdersManage'; // Adjust the URL as needed
                    } else {
                        // Show failure message
                        const toast = document.getElementById('toastMessage');
                        toast.classList.remove('hidden');

                        // Hide the toast message after a few seconds
                        setTimeout(() => {
                            toast.classList.add('hidden');
                        }, 3000);
                    }
                });
            </script>





            <footer class="footer px-4 py-6">
                <div class="footer-content">
                    <p class="text-sm text-gray-600 text-center">© Graduation 2024. All rights reserved. <a href="https://github.com/VanHa1006/RentTutor_Project.git">by Group-7</a></p>
                </div>
            </footer>
            <script src="~/js/site.js" asp-append-version="true"></script>

        </main>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
