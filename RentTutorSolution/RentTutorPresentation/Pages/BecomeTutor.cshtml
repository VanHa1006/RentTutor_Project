@page
@model RentTutorPresentation.Pages.BecomeTutorModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Become Tutor</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>

    <div class="font-[sans-serif]">
        <div class="min-h-screen flex flex-col items-center justify-center py-6 px-4">
            <div class="grid md:grid-cols-2 items-center gap-4 max-w-6xl w-full">
                <div class="border border-gray-300 rounded-lg p-6 max-w-md shadow-[0_2px_22px_-4px_rgba(93,96,127,0.2)] max-md:mx-auto">
                    <div class="mb-8">
                        <h3 class="text-blue-800 text-3xl font-extrabold">Become Tutor</h3>
                        <p class="text-gray-500 text-sm mt-4 leading-relaxed">
                            Change someone's life in your spare time. <br />
                            Get paid while doing it.
                        </p>
                    </div>

                    <form class="space-y-4" method="post" id="becomeTutorForm">
                        <div class="text-danger"></div>
                        <input type="hidden" name="TutorId" value="12345" />

                        <!-- Fake Data Fields -->

                        <div class="flex space-x-4">
                            <div class="w-1/2">
                                <label for="fullName" class="block text-sm font-medium text-gray-700">Full Name</label>
                                <input type="text" id="fullName" name="FullName" value="Teddy Nguyen" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" readonly />
                            </div>
                            <div class="w-1/2">
                                <label for="username" class="block text-sm font-medium text-gray-700">Nick Name</label>
                                <input type="text" id="username" name="Username" value="teddycute123" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" readonly />
                            </div>
                        </div>

                        <div>
                            <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
                            <input type="text" id="address" name="Address" value="123 Tan Phu St, HCM city" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" readonly />
                        </div>

                        <div class="flex space-x-4">
                            <div class="w-1/2">
                                <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
                                <input type="tel" id="phone" name="PhoneNumber" value="123-456-7890" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" readonly />
                            </div>
                            <div class="w-1/2">
                                <label for="birthday" class="block text-sm font-medium text-gray-700">Birthday</label>
                                <input type="date" id="birthday" name="Birthday" value="1990-01-01" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" readonly />
                            </div>
                        </div>
                        <!-- Fields left for the student to fill in -->
                        <div>
                            <label for="qualifications" class="block text-sm font-medium text-gray-700">Qualifications <span class="text-red-600">*</span></label>
                            <input type="text" id="qualifications" name="Qualifications" placeholder="Enter your qualifications" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" />
                        </div>

                        <div>
                            <label for="experience" class="block text-sm font-medium text-gray-700">Experience <span class="text-red-600">*</span></label>
                            <input type="text" id="experience" name="Experience" placeholder="Enter your experience" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" />
                        </div>

                        <div>
                            <label for="specialization" class="block text-sm font-medium text-gray-700">Specialization <span class="text-red-600">*</span></label>
                            <input type="text" id="specialization" name="Specialization" placeholder="Enter your specialization" class="w-full text-sm text-gray-800 border border-gray-300 px-4 py-3 rounded-lg outline-blue-600" />
                        </div>

                        <!-- Send Button -->
                        <div class="mt-8">
                            <button type="submit" id="sendButton" class="w-full flex items-center justify-center shadow-xl py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2">
                                    <path d="M3.41 20.41L13.42 11.4c.78-.78.78-2.05 0-2.83L3.41 2.59A2.001 2.001 0 000 4.01V19.98c0 1.1 1.1 1.66 2.09 1.07L11 15.17l-.09.09c-.38.38-.58.88-.58 1.41v5.51c0 .69.71 1.17 1.32.86l8.19-4.09a2.009 2.009 0 00.99-1.76V4.02c0-1.08-1.1-1.65-2.09-1.06L13 7.83l.09-.09c.38-.38.58-.88.58-1.41V1.01c0-.69-.71-1.17-1.32-.86L3.41 4.91a2.009 2.009 0 00-.99 1.76v14.08c0 1.08 1.1 1.65 2.09 1.06z" />
                                </svg>
                                Send
                            </button>
                        </div>
                    </form>

                    <div id="alertMessage" class="hidden text-center py-3 mt-4 rounded-lg"></div>

                    <script>
                        document.getElementById('becomeTutorForm').addEventListener('submit', function (event) {
                            event.preventDefault();
                            const alertMessage = document.getElementById('alertMessage');
                            const qualifications = document.getElementById('qualifications').value.trim();
                            const experience = document.getElementById('experience').value.trim();
                            const specialization = document.getElementById('specialization').value.trim();

                            // Validate that fields are not empty
                            if (!qualifications || !experience || !specialization) {
                                alertMessage.textContent = "Sending failed, something went wrong, please try again!!!";
                                alertMessage.classList.add('bg-red-200', 'text-red-700');
                                alertMessage.classList.remove('hidden');
                                return;
                            }

                            // Simulate a form submission
                            setTimeout(() => {
                                // Simulating success response
                                const isSuccess = Math.random() > 0.5;

                                if (isSuccess) {
                                    alertMessage.textContent = "Submitted successfully, Check your email to receive a response from the Graduation Team.";
                                    alertMessage.classList.add('bg-green-200', 'text-green-700');
                                } else {
                                    alertMessage.textContent = "Sending failed, something went wrong, please try again!!!";
                                    alertMessage.classList.add('bg-red-200', 'text-red-700');
                                }
                                alertMessage.classList.remove('hidden');
                            }, 1000);
                        });
                    </script>

                </div>

                <div class="lg:h-[400px] md:h-[300px] max-md:mt-8">
                    <img src="/img/tutor-directory.jpg" class="w-full h-full max-md:w-4/5 mx-auto block object-cover" alt="Dining Experience" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
