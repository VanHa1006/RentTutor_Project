@page
@model RentTutorPresentation.Pages.Tutor.IndexModel
@{
    var tutorId = HttpContext.Session.GetString("TutorId");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body >
    @if (!string.IsNullOrEmpty(tutorId))
    {
        <div class="bg-gray-100 flex items-center justify-center min-h-screen">
            <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg text-center">
                <h1 class="text-3xl font-bold mb-4">Welcome, Tutor! </h1>
                <p class="text-lg mb-6">We are thrilled to have you back. Explore your courses, manage them effectively, and provide the best learning experience.</p>
                <img src="https://i.pinimg.com/564x/2e/80/39/2e8039aed4b5bfca4801da0d47a194df.jpg" alt="Welcome" class="mb-6 w-full h-auto rounded-lg">
                <a href="/Tutor/Courses-manage" class="px-6 py-3 bg-blue-500 text-white rounded-lg font-semibold hover:bg-blue-600 transition-colors">Go to Courses Management</a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <img src="https://cdn.dribbble.com/userupload/8726277/file/still-90096ae0b20436af7d475737af5b86e5.gif?resize=400x0" alt="404 Not Found" class="mx-auto w-1/2 md:w-1/3 lg:w-1/4">
            <h1 class="text-4xl font-bold text-gray-800 mt-8">Oops! Page Not Found</h1>
            <p class="text-gray-600 mt-4">The page you are looking for does not exist or has been moved.</p>
            <a href="/" class="mt-6 inline-block px-6 py-3 bg-indigo-500 text-white font-semibold rounded-md hover:bg-indigo-600">Go Back to Home</a>
        </div>
    }

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
